---
import '../styles/global.css';
---

<section class="px-4 md:px-8">
  <div class="max-w-8xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-orange-500 mb-8 md:mb-12">CLIENTES</h2>
    <div class="flex items-center justify-center gap-4 md:gap-8">
      <button class="p-2 rounded-full hover:bg-gray-100 transition-colors" aria-label="Previous client">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-left w-6 h-6 md:w-8 md:h-8 text-gray-600" aria-hidden="true">
          <path d="m15 18-6-6 6-6"></path>
        </svg>
      </button>

      <div class="flex items-center justify-center gap-4 md:gap-8 min-w-[200px] md:min-w-[600px]">
        <div class="transition-all duration-300 scale-75 opacity-50 hidden md:block">
          <div class="w-32 h-32 md:w-40 md:h-40 bg-white border-2 border-gray-200 rounded-lg flex items-center justify-center">
            <span class="text-lg md:text-xl font-bold text-gray-800">M</span>
          </div>
        </div>
        <div class="transition-all duration-300 scale-100 opacity-100">
          <div class="w-32 h-32 md:w-40 md:h-40 bg-white border-2 border-gray-200 rounded-lg flex items-center justify-center">
            <span class="text-lg md:text-xl font-bold text-gray-800">TURBILH√ÉO</span>
          </div>
        </div>
        <div class="transition-all duration-300 scale-75 opacity-50 hidden md:block">
          <div class="w-32 h-32 md:w-40 md:h-40 bg-white border-2 border-gray-200 rounded-lg flex items-center justify-center">
            <span class="text-lg md:text-xl font-bold text-gray-800">BAR DO BETO</span>
          </div>
        </div>
      </div>
      <button class="p-2 rounded-full hover:bg-gray-100 transition-colors" aria-label="Next client">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right w-6 h-6 md:w-8 md:h-8 text-gray-600" aria-hidden="true">
          <path d="m9 18 6-6-6-6"></path>
        </svg>
      </button>
    </div>
  </div>
</section>