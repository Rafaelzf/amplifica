---
import '../styles/global.css';

---
<section class="px-4 md:px-8 lg:px-16 py-12 md:py-16 bg-gray-50">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold mb-8 md:mb-12">ENTRE EM CONTATO!</h2>
    <div class="flex flex-col md:flex-row justify-between gap-20">
      <form class="space-y-4 md:space-y-6 flex-1">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-2">NOME</label>
          <input id="name" class="w-full px-4 py-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-500 focus:border-transparent" type="text">
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">E-mail</label>
          <input id="email" class="w-full px-4 py-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-500 focus:border-transparent" type="email">
        </div>
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Telefone</label>
          <input id="phone" class="w-full px-4 py-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-500 focus:border-transparent" type="tel">
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Converse ou Mensagem</label>
          <textarea id="message" rows="5" class="w-full px-4 py-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-500 focus:border-transparent resize-none"></textarea>
        </div>
        <button type="submit" class="w-full md:w-auto bg-black text-white px-8 py-3 rounded font-medium hover:bg-gray-800 transition-colors">ENVIAR</button>
      </form>
